{
    "name": "flowgrow/scss-library",
    "type": "wordpress-plugin",
    "authors": [{
        "name": "Florian Groh",
        "email": "florian@kniff.at"
    }],
	"autoload": {
        "psr-4": {
            "ScssLibrary\\": "src/"
        }
    },
    "require": {
		"scssphp/scssphp": "^1.0.8",
        "baxtian/php-singleton": "^0.4.0"
    },
	"require-dev": {
        "brain/monkey": "^2.3",
        "phpunit/phpunit": "^8.3",
        "php-vfs/php-vfs": "*@stable"
    },
    "scripts": {
        "readme": "curl -L https://raw.githubusercontent.com/fumikito/wp-readme/master/wp-readme.php | php",
		"test": "phpunit",
		"test-report": "phpunit --coverage-html=./tests/reports",
		"zip": [
			"@clear",
            "@readme",
			"@composer archive --format=zip --file scss-library-kniff",
			"zip -u scss-library-kniff.zip vendor/*",
			"zip -d scss-library-kniff.zip README.md phpunit.xml .gitignore composer.* 'tests/*'"
		],
		"clear": [
			"rm -rf ./tests/coverage",
			"rm -rf ./tests/assets/build",
			"rm -rf ./tests/reports",
			"rm -f ./scss-library-kniff.zip",
			"@composer update --no-dev -o"
		],
        "release": [
            "bash release.sh"
        ]
    }
}
